# Environment Variables Template for PaiNaiDee 3D Map
# ตัวอย่างตัวแปรสภาพแวดล้อมสำหรับ PaiNaiDee 3D Map

# =============================================================================
# Application Configuration / การตั้งค่าแอปพลิเคชัน
# =============================================================================

# Environment mode (development, production, staging)
# โหมดสภาพแวดล้อม (development, production, staging)
NODE_ENV=development

# Application name
# ชื่อแอปพลิเคชัน
APP_NAME="PaiNaiDee 3D Map"

# Application version
# เวอร์ชันแอปพลิเคชัน
APP_VERSION=2.0.0

# Application URL (change for production)
# URL แอปพลิเคชัน (เปลี่ยนสำหรับการใช้งานจริง)
APP_URL=http://localhost:8080

# =============================================================================
# Server Configuration / การตั้งค่าเซิร์ฟเวอร์
# =============================================================================

# Server port
# พอร์ตเซิร์ฟเวอร์
PORT=8080

# Host address
# ที่อยู่โฮสต์
HOST=0.0.0.0

# =============================================================================
# External Services / บริการภายนอก
# =============================================================================

# Google Fonts API (if needed for custom loading)
# Google Fonts API (หากจำเป็นสำหรับการโหลดแบบกำหนดเอง)
GOOGLE_FONTS_API_KEY=your_google_fonts_api_key_here

# Mapbox API (if using Mapbox for enhanced mapping)
# Mapbox API (หากใช้ Mapbox สำหรับแผนที่ขั้นสูง)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Weather API (if implementing real weather data)
# Weather API (หากนำข้อมูลสภาพอากาศจริงมาใช้)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# =============================================================================
# Analytics and Monitoring / การวิเคราะห์และการติดตาม
# =============================================================================

# Google Analytics (if implementing analytics)
# Google Analytics (หากนำการวิเคราะห์มาใช้)
GA_TRACKING_ID=GA_MEASUREMENT_ID

# Sentry for error tracking (if implementing error tracking)
# Sentry สำหรับติดตามข้อผิดพลาด (หากนำการติดตามข้อผิดพลาดมาใช้)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Security Configuration / การตั้งค่าความปลอดภัย
# =============================================================================

# CORS allowed origins (comma-separated)
# CORS อนุญาตแหล่งที่มา (คั่นด้วยจุลภาค)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Content Security Policy
# นโยบายความปลอดภัยเนื้อหา
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;"

# =============================================================================
# Feature Flags / การตั้งค่าฟีเจอร์
# =============================================================================

# Enable/disable features (true/false)
# เปิด/ปิดฟีเจอร์ (true/false)
FEATURE_WEATHER_INTEGRATION=false
FEATURE_USER_ANALYTICS=false
FEATURE_OFFLINE_MODE=true
FEATURE_PWA=true

# =============================================================================
# Performance Configuration / การตั้งค่าประสิทธิภาพ
# =============================================================================

# Cache settings (in seconds)
# การตั้งค่าแคช (เป็นวินาที)
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# Compression settings
# การตั้งค่าการบีบอัด
ENABLE_GZIP=true
ENABLE_BROTLI=true

# =============================================================================
# Localization / การปรับแต่งภาษา
# =============================================================================

# Default language (th, en)
# ภาษาเริ่มต้น (th, en)
DEFAULT_LANGUAGE=th

# Available languages (comma-separated)
# ภาษาที่มี (คั่นด้วยจุลภาค)
AVAILABLE_LANGUAGES=th,en

# =============================================================================
# Docker Configuration / การตั้งค่า Docker
# =============================================================================

# Docker image tag
# แท็กอิมเมจ Docker
DOCKER_IMAGE_TAG=latest

# Docker container name
# ชื่อคอนเทนเนอร์ Docker
DOCKER_CONTAINER_NAME=painaidee-3d-map

# =============================================================================
# Development Configuration / การตั้งค่าการพัฒนา
# =============================================================================

# Debug mode (true/false)
# โหมดดีบัก (true/false)
DEBUG=true

# Log level (error, warn, info, debug)
# ระดับล็อก (error, warn, info, debug)
LOG_LEVEL=debug

# Hot reload (for development)
# โหลดใหม่อัตโนมัติ (สำหรับการพัฒนา)
HOT_RELOAD=true

# =============================================================================
# Instructions / คำแนะนำ
# =============================================================================

# English:
# 1. Copy this file to .env in the root directory
# 2. Update the values according to your needs
# 3. Never commit the actual .env file to version control
# 4. Use different .env files for different environments

# ไทย:
# 1. คัดลอกไฟล์นี้เป็น .env ในไดเรกทอรีหลัก
# 2. อัปเดตค่าต่าง ๆ ตามความต้องการของคุณ
# 3. ห้ามอัปโหลดไฟล์ .env จริงไปยัง version control
# 4. ใช้ไฟล์ .env ที่แตกต่างกันสำหรับสภาพแวดล้อมที่แตกต่างกัน